{% extends 'base.html.twig' %}

{% block body %}
    <div class="form-group">
        <div class="col-sm-8">
            <h1>{{'search.title'|trans}} :</h1>

            {{ form_start(form, {attr: {class: 'filter'}}) }}
            {{ form_widget(form) }}
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">{{'search.submit'|trans}}</button>
        </div>
    </div>
    {{ form_end(form) }}

    <div class="container row">
        <div class="d-flex justify-content-end mb-2">
            {{ knp_pagination_sortable(trajets, 'Prix', 't.prix')}}
            {{ knp_pagination_sortable(trajets, 'Date', 't.date_depart')}}
        </div>
        <div class="grid col-md-12">
            {% for trajet in trajets %}
                {% include 'trajet/traj.html.twig' with {trajet: trajet} only %}
            {% endfor %}
        </div>
    </div>

    <div class="mt-4">
        {{ knp_pagination_render(trajets) }}
    </div>

{% endblock %}