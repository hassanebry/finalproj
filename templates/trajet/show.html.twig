{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{'show.title'|trans}} <i>{{ trajet.VilleDepart }}</i> {{'list.prep'|trans}} <i>{{ trajet.VilleArrive }}</i> {{'list.le'|trans}} <i>{{ trajet.DateDepart|date("d/m/Y") }}</i> :</h1>
    <div class="media" style="margin-top: 60px;">
        <div class="media-body">
            <div class="row">
                <div class="col-sm-10">
                    <h3 class="media-heading"><strong>{{ trajet.VilleDepart }}</strong> <i>({{ trajet.DateDepart|date("d/m/Y") }})</i></h3>
                </div>

                <div class="col-sm-2">
                    <i class="pull-right">{{'show.pub'|trans}} {{ trajet.DateAjout|date("d/m/Y") }}</i>
                </div>
            </div>

            <p>
                <strong>{{ trajet.VilleDepart }}</strong>
                <small> - <i>{{ trajet.VilleArrive }}</i></small>
            </p>

            <p>{{ trajet.DateDepart|date("d/m/Y") }}</p>

            <p>
                <strong>{{'show.depart'|trans}} :</strong> {{ trajet.HeureDepart|date("h:i:s") }}
            </p>
            <p>
                <strong>{{'show.arrive'|trans}} :</strong> {{ trajet.HeureArrive|date("h:i:s") }}
            </p>
			<p>
                <strong>{{'list.Prix'|trans}} :</strong> {{ trajet.prix }}
            </p>
			<p>
                <strong>{{'show.Conducteur'|trans}} :</strong> {{ trajet.utilisateur.nom }} {{ trajet.utilisateur.prenom }}
            </p>
            
            <div class="row">
                <div class="col-sm-12 text-right">
                    <a class="btn btn-default" href="/trajet">
                        <span class="glyphicon glyphicon-menu-left" aria-hidden="true"></span>
                        {{'show.list'|trans}}
                    </a>

                    <a class="btn btn-primary" href="#">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        {{'show.edit'|trans}}
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}