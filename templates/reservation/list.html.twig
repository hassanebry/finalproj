{% extends 'base.html.twig' %}

{% block body %}
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">
        <h1>Mes reservations</h1>
 
            <div class="container row">
                <div class="grid col-md-12">
        {% for reservation in reservations %}
            
                    <div class="card" style="width: 15rem;">
                        <div class="card-body">
                            <h5 class="card-title"><a href="#">{{'list.Depart'|trans}}: {{ reservation.trajet.VilleDepart }}</a></h5>
                            <h5 class="card-title"><a href="#"> {{'list.Destination'|trans}}: {{ reservation.trajet.VilleArrive }}</a></h5>
                            <p class="card-text">{{'list.le'|trans}} {{ reservation.trajet.DateDepart|date('d:m:y') }} {{'list.prep'|trans}} {{ reservation.trajet.HeureDepart|date('h:m:i') }}</p>
                            <p class="card-text">{{'list.place'|trans}} {{ reservation.trajet.NbrePlace }}</p>
                            <h5 class="card-title text-success" style="font-weight: bold; font-size: 1.5rem;">{{'list.Prix'|trans}}: {{ reservation.trajet.prix|number_format(0, ',', ' ') }} Â£</h5>
                            <h5 class="card-title text-success" style="font-weight: bold; font-size: 1.5rem;">{{('reserver.date'|trans)}} : {{ reservation.dateReserv|date('d:m:y') }}</h5>                      
                            <a href = "{{ path('reservation.edit', {id: reservation.id}) }}"><button type="button" class="btn btn-primary">{{('reserver.edit'|trans)}}</button></a>
                            <a href = "{{ path('reservation.delete', {id: reservation.id}) }}"><button type="button" class="btn btn-danger">{{('reserver.del'|trans)}}</button></a>
                        </div>
                    </div>
                    <div>
                        <p>   </p>
                    </div>
                

        {% endfor %}
                </div>
            </div>
    


{% endblock %}